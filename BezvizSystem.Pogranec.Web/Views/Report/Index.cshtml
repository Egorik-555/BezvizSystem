@model BezvizSystem.Pogranec.Web.Models.Report.ReportModel

@{
    ViewBag.Title = "Отчеты";
    ViewBag.SubTitle = "Отчеты";
}

<td class="two_column2" valign="top">

    <table class="text_only">
        @using (Html.BeginForm())
        {
            <thead>
                <tr>
                    <td>
                        <input type="button" style="width:100%" class="simply_form_red marbot20" id="dates" name="dates" value="Выбор диапазона дат" />
                    </td>

                    <td id="panelDates" style="display: none">
                        <input type="text" name="dateFrom" autocomplete="off" class="datepicker" value="@(((DateTime)ViewBag.dateFrom).ToString("dd.MM.yyyy"))" />
                        <input type="text" name="dateTo" autocomplete="off" class="datepicker" value="@(((DateTime)ViewBag.dateTo).ToString("dd.MM.yyyy"))" />
                        <input type="submit" class="simply_form_red marbot20" style="height:auto; width:95px" value="Найти" />
                    </td>
                </tr>
            </thead>
        }

        <tbody id="data">
            @Html.Partial("DataReport", Model)
        </tbody>

    </table>

</td>

@section scripts{

    <script src="~/Scripts/MyScripts/ShowPanels.js"></script>
    <script>
        showPanel('dates', 'panelDates')
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
