@model BezvizSystem.Pogranec.Web.Models.Report.ReportModel

@{
    ViewBag.Title = "Отчеты";
    ViewBag.SubTitle = "Отчеты";
}

<td class="two_column2" valign="top">


    @using (Html.BeginForm())
    {
        <table id="panelReport" style="display:none" class="in_table7">

            <tr>
                <td class="left no_border">
                    <label for="dateFrom">Дата прибытия с</label>
                    <input type="text" id="dateFrom" autocomplete="off" name="dateFrom" class="datepicker form-control" 
                           value="@(ViewBag.dateFrom != null ? ((DateTime)ViewBag.dateFrom).ToString("dd.MM.yyyy") : "" )" />
                </td>
                <td class="left no_border" align="right">
                    <label for="dateTo">по</label>
                    <input type="text" id="dateTo" autocomplete="off" name="dateTo" class="datepicker form-control" 
                           value="@(ViewBag.dateTo != null ? ((DateTime)ViewBag.dateTo).ToString("dd.MM.yyyy") : "" )" />
                </td>
            </tr>
            <tr>
                <td class="no_border">
                    <label>Пункт пропуска</label>
                    @Html.DropDownList("CheckPoint", ViewBag.CheckPoints as SelectList, new { @class = "form-control punkt", @value = ViewBag.checkPoint })
                </td>
            </tr>

            <tr>
                <td>
                    <input type="submit" class="simply_form_red marbot20" style="height:auto; width:95px" value="Найти" />
                </td>
            </tr>
        </table>
    }



    <table class="text_only">

        <thead>

            <tr>
                <td class="no_border">
                    <input id="filterBtn" type="button" class="simply_form_red marbot20 buttonParameters" style="width:100%" value="Фильтр" />
                </td>
            </tr>
        </thead>

        <tbody id="data">
            @Html.Partial("DataReport", Model)
        </tbody>

    </table>

</td>

@section scripts{

    <script src="~/Scripts/MyScripts/ShowPanels.js"></script>
    <script>
        showPanel('filterBtn', 'panelReport')
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    <script src="~/Scripts/MyScripts/pikaday.js"></script>
    <script src="~/Scripts/MyScripts/combobox.js"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script>

        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            //chart1
            var data1 = new google.visualization.DataTable('@Model.StringDateByArrivalCount');

            var options1 = {

                title: 'Количество зарегистрированных туристов на дату прибытия',
                titleTextStyle: { color: '#0a9200', fontSize: 20, bold: true, fontName: 'Times New Roman' },
                colors: ['#ffba00'],
                legend: { position: 'none' },
                hAxis: {
                    textStyle: { fontSize: '12', bold: true, fontName: 'Times New Roman' }
                },
                vAxis: {
                    textStyle: { fontSize: '12', bold: true, fontName: 'Times New Roman' }
                },
                backgroundColor: { fill: 'none', stroke: '#ffba00', strokeWidth: 2 },
                'height': 400
            };

            var chart1 = new google.visualization.ColumnChart(document.getElementById('chart1'));
            chart1.draw(data1, options1);

            //chart2
            var data2 = new google.visualization.DataTable('@Model.StringCheckPointCount');

            var options2 = {
                title: 'Количество туристов по пунктам пропуска',
                titleTextStyle: { color: '#0a9200', fontSize: 20, bold: true, fontName: 'Times New Roman' },
                colors: ['brown'],
                hAxis: {
                    textStyle: { fontSize: '15', bold: true, fontName: 'Times New Roman' },
                    showTextEvery: 1
                },
                vAxis: {
                    textStyle: { fontSize: '12', bold: true, fontName: 'Times New Roman' }
                },
                legend: { position: 'none' },
                backgroundColor: { fill: 'none', stroke: 'brown', strokeWidth: 2 },
                'height': 400
            };

            var chart2 = new google.visualization.ColumnChart(document.getElementById('chart2'));
            chart2.draw(data2, options2);

            //chart3
            var data3 = new google.visualization.DataTable('@Model.StringDaysByCount');

            var options3 = {
                title: 'Количество туристов по числу дней пребывания',
                titleTextStyle: { color: '#0a9200', fontSize: 20, bold: true, fontName: 'Times New Roman' },
                colors: ['#037d3c'],
                hAxis: {
                    textStyle: { fontSize: '15', bold: true, fontName: 'Times New Roman' }
                },
                vAxis: {
                    textStyle: { fontSize: '12', bold: true, fontName: 'Times New Roman' }
                },
                legend: { position: 'none' },
                backgroundColor: { fill: 'none', stroke: '#037d3c', strokeWidth: 2 },
                'height': 400
            };

            var chart3 = new google.visualization.ColumnChart(document.getElementById('chart3'));
            chart3.draw(data3, options3);

        }
    </script>
}
