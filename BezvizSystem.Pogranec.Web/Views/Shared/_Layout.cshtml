@using BezvizSystem.BLL.Interfaces

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Без виз</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div style="float:left; width: 200px; border: 1px solid black">

        <div>
            <input type="button" value="Главная" onclick="location.href='@Url.Action("Index", "Home")'" />
        </div>
        <div>
            <input type="button" value="Анкеты" onclick="location.href='@Url.Action("Index", "Anketa")'" />
        </div>
        <div>
            <input type="button" value="Отчеты" onclick="location.href='@Url.Action("Index", "Report")'" />
        </div>

        @if (User.IsInRole("pogranecAdmin"))
        {
            <div>
                <input type="button" value="История активности" onclick="location.href='@Url.Action("Index", "Anketa")'" />
            </div>
            <div>
                <input type="button" value="Администрирование пользователей" onclick="" />
            </div>
        }

        <div>
            <input type="button" value="Выход" onclick="location.href='@Url.Action("Logout", "Home")'" />
        </div>
    </div>

    <div style="margin-left:210px;  border: 1px solid black">
        <div class="container body-content">
            @RenderBody()      
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
