@model BezvizSystem.Web.Models.Visitor.EditVisitorModel

@{
    ViewBag.Title = "Индивидуальный турист";
    ViewBag.SubTitle = "Индивидуальный турист";
}

<td class="two_column">
    @using (Html.BeginForm("EditVisitor", "Anketa"))
    {
        @Html.AntiForgeryToken()
        <table class="second" cellpadding="0" cellspacing="15">

            <tr>
                <td colspan="2">
                    @Html.ValidationSummary(false, "")
                </td>
            </tr>

            <tr>
                <td><h2 class="top">Общие сведения</h2></td>
            </tr>
            <tr>
                <td class="left">
                    @Html.HiddenFor(model => model.Id)
                    @Html.LabelFor(model => model.DateArrival, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DateArrival, "Date", new { htmlAttributes = new { @class = "form-control datepicker" } })
                </td>
                <td class="left" align="right">
                    @Html.LabelFor(model => model.DateDeparture, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DateDeparture, "Date", new { htmlAttributes = new { @class = "form-control datepicker" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.DaysOfStay, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DaysOfStay, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control bg_in" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.CheckPoint, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.CheckPoint, ViewBag.CheckPoints as SelectList, new { @class = "form-control punkt" })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.PlaceOfRecidense, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PlaceOfRecidense, new { htmlAttributes = new { @class = "form-control bg_in" } })
                    <p class="no_need">*Не обязательно к заполнению если турист не проживает в специализированных средствах размещения</p>
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <h3 class="red">Информация о туристе</h3>
                </td>
            </tr>

            @Html.EditorFor(model => model.Info)

            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.ProgramOfTravel, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.ProgramOfTravel, new { htmlAttributes = new { @class = "form-control bg_in_long" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.TimeOfWork, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TimeOfWork, new { htmlAttributes = new { @class = "form-control bg_in" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <h3 class="red">Информация о туристическом операторе:</h3>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.SiteOfOperator, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SiteOfOperator, new { htmlAttributes = new { @class = "form-control bg_in" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.TelNumber, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TelNumber, new { htmlAttributes = new { @class = "form-control bg_in" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control bg_in" } })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Сохранить" class="simply_form_red sfr_auto" style="height:50px;" />
                    <button type="submit" name="button" value="Extra" class="simply_form_red sfr_auto" style="background-color:#ffba00; width:101%; border: 1px solid #ffba00;">Экстренная передача</button>
                    @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new { @class = "simply_form_red sfr_auto", style = "background-color:red; width:100%; padding:0;display: block; border: 1px solid red; font-family:Arial;" })
                </td>
            </tr>
        </table>
    }
</td>

@section Scripts{
    @Scripts.Render("~/bundles/jquery-ui")
    <script src="~/Scripts/MyScripts/pikaday.js"></script>
    <script src="~/Scripts/MyScripts/EditHelper.js"></script>
}
