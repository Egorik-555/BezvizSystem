            @Html.DropDownListFor(model => model.Nationality, ViewBag.Nationalities as SelectList, @*new { htmlAttributes =*@ new { @class = "form-control" } @*}*@)
            @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
        </div>
    </div>
