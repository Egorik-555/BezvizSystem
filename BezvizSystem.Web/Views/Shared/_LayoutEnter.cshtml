<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <h4>Система регистрации анкет иностранных туристов</h4>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Вход" onclick="location.href='@Url.Action("Login", "Account")'" class="btn btn-default" />

            <input type="button" value="Регистрация туроператора" onclick="location.href='@Url.Action("Register", "Account")'" class="btn btn-default" />
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Без виз</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
