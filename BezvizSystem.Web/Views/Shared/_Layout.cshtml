
@using BezvizSystem.Web.Helpers
@using BezvizSystem.BLL.Interfaces

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Без виз</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div style="float:left; width: 200px; border: 1px solid black">
        <input type="button" value="Главная" id="btn1" onclick="'@Url.Action("Index", "Home")'" />

        <input type="button" value="Регистрация индивидуального туриста" onclick="location.href='@Url.Action("Create", "Visitor")'" />
        <input type="button" value="Регистрация группы" onclick="location.href='@Url.Action("Create", "Group")'" />
        <input type="button" value="Зарегистрированные анкеты" onclick="location.href='@Url.Action("Index", "Anketa")'" />
        <input type="button" value="Отметка о прибытии" onclick="location.href='@Url.Action("Index", "Mark")'" />
        <input type="button" value="Отчеты" onclick="location.href='@Url.Action("Index", "Report")'" />
        @if (User.IsInRole("admin"))
        {
            <input type="button" id="btn2" value="Администрирование туроператоров" onclick="location.href='@Url.Action("Index", "Operator")'" />
        }
        <input type="button" value="Выход" onclick="location.href='@Url.Action("Logout", "Account")'" />
    </div>

    <div style="margin-left:210px;  border: 1px solid black">
        <div class="container body-content">
            @RenderBody()
            @*<hr />
            <footer>
                    <p>&copy; @DateTime.Now.Year - Без виз</p>
                </footer>*@
        </div>
    </div>
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
