@model BezvizSystem.Web.Models.Report.ReportModel

@{
    ViewBag.Title = "Отчеты";
    ViewBag.SubTitle = "Отчеты";

}
<td class="two_column2" valign="top">
    @using (Html.BeginForm())
    {
        <table class="text_only">

            <thead>
                <tr>
                    <td>
                        <input type="button" class="pad_cent_red" id="dates" name="dates" value="Выбор диапазона дат" />
                    </td>
                    <td>
                        <div id="panelDates" style="display: none">
                            <input type="date" name="dateFrom" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <input type="date" name="dateTo" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <input type="submit" @*onclick="drawChart();"*@ value="Отобрать" />
                        </div>
                    </td>
                </tr>
            </thead>

            <tbody id="data">
                @Html.Partial("DataReport", Model)
            </tbody>
            @*<tr>
                    <td colspan="2">
                        <h3 class="red"><b>Количество зарегистрированных туристов на дату прибытия</b></h3>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" id="chart1">
                    </td>
                </tr>*@

        </table>
    }
</td>

@section scripts{

    <script>

        var button = document.getElementById('dates');
        var panel = document.getElementById('panelDates');

        button.onclick = function () {
            if (panel.style.display != 'none')
                panel.style.display = 'none';
            else panel.style.display = '';
        }

    </script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script>

        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {


            var dateFrom = document.getElementsByName("dateFrom")[0].value;
            var dateTo = document.getElementsByName("dateTo")[0].value;

        @*var jsonData = $.ajax({
            url: '@Url.Action("GetDataByDateCount")?dateFrom=' + dateFrom + '&dateTo=' + dateTo,
            dataType: "json",
            async: false
        }).responseText;*@
          
            console.log('@Model.StringDateByArrivalCount');
            var data = new google.visualization.DataTable(@Model.StringDateByArrivalCount /*JSON.parse(jsonData)*/);

            var options = {
                    colors: ['#ffba00'],
                    legend: {position: 'none'},
                    backgroundColor: { fill: 'none', stroke: '#ffba00', strokeWidth: 2},
                    'height': 200
            };

            var chart = new google.visualization.ColumnChart(document.getElementById('chart1'));
            chart.draw(data, options);

        }

    </script>
}
